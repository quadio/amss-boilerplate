    <script type="text/javascript">
        
        /*odata*/
        $(document).ready(function() {
            var link = "/Services/ClientApi.svc/Users?$filter=startswith(Name,'Mrs')";
            $('#test').click(function() {
                $.ajax({
                    url: link,
                    dataType: "json",
